<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUpApp.Views.AddItemPage"
             Title="Add Saving">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Description" FontSize="16" />
        <Entry Text="{Binding NewDescription}" Placeholder="e.g. Skipped coffee" />

        <Label Text="Amount" FontSize="16" />
        <Entry Text="{Binding NewAmount}" Keyboard="Numeric" Placeholder="e.g. 4.50" />

        <Button Text="Save Entry"
                Command="{Binding AddItemCommand}"
                BackgroundColor="Green"
                TextColor="White"
                CornerRadius="12"
                FontAttributes="Bold"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>
