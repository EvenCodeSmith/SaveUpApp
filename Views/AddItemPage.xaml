<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUpApp.Views.AddItemPage"
             Title="Add Saving">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Description" Style="{StaticResource BodyLabel}" />
        <Entry Text="{Binding NewDescription}" />

        <Label Text="Amount" Style="{StaticResource BodyLabel}" />
        <Entry Text="{Binding NewAmount, Mode=TwoWay}" Keyboard="Numeric" />


        <Button Text="Save Entry"
                Command="{Binding AddItemCommand}"
                Style="{StaticResource PrimaryButton}" 
                Padding="10"
                CornerRadius="12"/>
        
    </VerticalStackLayout>
</ContentPage>
